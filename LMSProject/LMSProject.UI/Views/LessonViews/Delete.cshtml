@model LMSProject.DATA.EF.LessonView

@{
    ViewBag.Title = "Delete: Lesson view of " + Model.UserDetail.FullName + " viewing " + Model.Lesson.LessonTitle;
}

<div class="myContainer">
    @if (User.IsInRole("Admin"))
    {
        <h2>@ViewBag.Title</h2>

        <h3 class="alert myAlert">Are you sure you want to delete this?</h3>
        <div>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.DateViewed)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DateViewed)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Lesson.LessonTitle)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Lesson.LessonTitle)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.UserDetail.FirstName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.UserDetail.FirstName)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn myDanger" />
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn myBackButton leftMarge" })
                </div>
            }
        </div>
    }
    else
    {
        <h2>Welcome to the delete page.</h2>
        <h4>You do not currently have the status to delete a lesson view.</h4>
        <div>
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn myBackButton" })
            }
        </div>
    }
</div>