@model IEnumerable<LMSProject.DATA.EF.LessonView>

@{
    ViewBag.Title = "Lesson View Index";
}

<div class="myContainer" style="overflow-x:auto;">
    <h2>@ViewBag.Title</h2>

    @*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
    <table class="table data-table table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Lesson.Cours.CourseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lesson.LessonTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserDetail.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateViewed)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Lesson.Cours.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lesson.LessonTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserDetail.FullName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.DateViewed)
            </td>
            <td>
                <a href="@Url.Action("Edit", "LessonViews", new {id = item.LessonViewId})">
                    <i class="fa fa-pencil-square-o fa-lg" aria-hidden="true"></i>
                </a>
                <a href="@Url.Action("Details", "LessonViews", new {id = item.LessonViewId})" class="lgScreenlftMarge">
                    <i class="fa fa-info-circle fa-lg" aria-hidden="true"></i>
                </a>
                <a href="@Url.Action("Delete", "LessonViews", new {id = item.LessonViewId})" class="lgScreenlftMarge">
                    <i class="fa fa-trash-o fa-lg" aria-hidden="true"></i>
                </a>
            </td>
        </tr>
        }

    </table>
</div>