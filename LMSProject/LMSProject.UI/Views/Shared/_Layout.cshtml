<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewBag.Title | Learning Management System | John Swift Final Project</title>

    <!-- Known Template https://templatemo.com/tm-516-known -->

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta name="description" content="A learning management system for Scientists">
    <meta name="keywords" content="">
    <meta name="author" content="John Swift">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">

    @*<link rel="stylesheet" href="~/Content/css/bootstrap.min.css">*@
    <link rel="stylesheet" href="~/Content/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/css/owl.carousel.css">
    <link rel="stylesheet" href="~/Content/css/owl.theme.default.min.css">

    <!-- MAIN CSS -->
    <link rel="stylesheet" href="~/Content/css/templatemo-style.css">

    <!-- Custom CSS -->
    <link href="~/Content/Custom.css" rel="stylesheet" />
</head>
<body id="top" data-spy="scroll" data-target=".navbar-collapse" data-offset="50" @*id, data-spy, data-target, data-offset all part of the template*@>

    <!-- PRE LOADER
    <section class="preloader">
        <div class="spinner">

            <span class="spinner-rotate"></span>

        </div>
    </section>-->
    <!-- MENU -->
    <section class="navbar custom-navbar navbar-fixed-top" role="navigation">
        <div class="container">

            <div class="navbar-header">
                <button class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon icon-bar"></span>
                    <span class="icon icon-bar"></span>
                    <span class="icon icon-bar"></span>
                </button>

                <!-- lOGO TEXT HERE -->
                <a href="#" class="navbar-brand">LMS</a>
            </div>

            <!-- MENU LINKS -->
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-nav-first">
                    <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                    <li><a href="@Url.Action("Index", "UserDetails")">Employees</a></li>
                    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                    {
                        <li class="dropdown" @*Maybe should be dropdown-toggle here*@>
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Courses <span class="caret"></span></a>
                            <ul class="dropdown-menu" @*same as this? maybe no class for this*@>
                                <li><a href="@Url.Action("Index", "Courses")">Courses List</a></li>
                                <li><a href="@Url.Action("Index", "CourseCompletions")">Course Completions</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li><a href="@Url.Action("Index", "Courses")">Courses</a></li>
                    }
                    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                    {
                        <li class="dropdown" @*Maybe should be dropdown-toggle here*@>
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Lessons <span class="caret"></span></a>
                            <ul class="dropdown-menu" @*same as this? maybe no class for this*@>
                                <li><a href="@Url.Action("Index", "Lessons")">Lessons List</a></li>
                                <li><a href="@Url.Action("Index", "LessonViews")">Lesson Views</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li><a href="@Url.Action("Index", "Lessons")">Lessons</a></li>
                    }
                    @Html.Partial("_LoginPartial")
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li><a href="@Url.Action("Contact", "Home")"><i class="fa fa-envelope"></i> Contact Us</a></li>
                </ul>
            </div>

        </div>
    </section>
    <br />
    <div class="myMainContent">
        @RenderBody()
    </div>

    <!-- FOOTER -->
    <footer id="footer">
        <div class="container">
            <div class="row">

                <div class="col-md-4 col-sm-6">
                    <div class="footer-info">
                        <div class="section-title">
                            <h2>Headquarters</h2>
                        </div>
                        <address>
                            <p>1800 South Main Street,<br> Missouri City, KS 12000</p>
                        </address>

                        <div class="copyright-text">
                            <p>Copyright &copy; 2019 John Swift</p>

                            <p>Design: TemplateMo</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>


    <!-- SCRIPTS -->
    <script src="~/Content/js/jquery.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
    <script src="~/Content/js/owl.carousel.min.js"></script>
    <script src="~/Content/js/smoothscroll.js"></script>
    <script src="~/Content/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/js/custom.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>