@model IEnumerable<LMSProject.DATA.EF.CourseCompletion>

@{
    ViewBag.Title = "Course Completion Index";
}

<div class="myContainer" style="overflow-x:auto;">
    <h2>@ViewBag.Title</h2>

    @*<p>
            @Html.ActionLink("Create New", "Create")
        </p>*@
    <table class="table data-table table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DateCompleted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cours.CourseName)
            </th>
            <th>
                Name
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCompleted)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cours.CourseName)
                </td>
                <td>
                    <a href="@Url.Action("Details/" + item.UserDetail.UserId, "UserDetails")">
                        @Html.DisplayFor(modelItem => item.UserDetail.FullName)
                    </a>
                </td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a href="@Url.Action("Edit", "CourseCompletions", new {id = item.CourseCompletionId})">
                            <i class="fa fa-pencil-square-o fa-lg" aria-hidden="true"></i>
                        </a>
                        <a href="@Url.Action("Details", "CourseCompletions", new {id = item.CourseCompletionId})" class="lgScreenlftMarge">
                            <i class="fa fa-info-circle fa-lg" aria-hidden="true"></i>
                        </a>
                        <a href="@Url.Action("Delete", "CourseCompletions", new {id = item.CourseCompletionId})" class="lgScreenlftMarge">
                            <i class="fa fa-trash-o fa-lg" aria-hidden="true"></i>
                        </a>
                    }
                    else
                    {
                        <a href="@Url.Action("Details", "CourseCompletions", new {id = item.CourseCompletionId})">
                            <i class="fa fa-info-circle fa-lg" aria-hidden="true"></i>
                        </a>
                    }

                </td>
            </tr>
        }

    </table>
</div>